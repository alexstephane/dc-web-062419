<h1>Create a user or <%= link_to "Log in", login_path %></h1>

<% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |e| %>
        <li class="error"><%= e %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
<% end %>